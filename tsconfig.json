{
  "compilerOptions": {
    "strict": true,
    "target": "es2015",
    "module": "es2015",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitAny": false
  }
}
