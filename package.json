{
  "name": "@talismn/api",
  "version": "0.0.16",
  "description": "A lib for spinning up multiple polkadot.js or lightclient instances and being able to perform aggregate queries",
  "types": "dist/types",
  "main": "./src/index.ts",
  "browser": "./dist/index.js",
  "exports": "./dist/index.js",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "nodemon --watch src --ext js,ts --exec yarn prepack",
    "build": "esbuild-node-tsc",
    "build:types": "tsc",
    "prepack": "yarn build && yarn build:types"
  },
  "author": "Talisman",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@polkadot/api": "^5.4.1",
    "@polkadot/keyring": "^7.2.1",
    "@polkadot/typegen": "^5.4.1",
    "@polkadot/types": "^5.5.2",
    "@polkadot/util": "^7.2.1",
    "@polkadot/util-crypto": "^7.2.1",
    "@talismn/chaindata-js": "~0",
    "@types/lodash": "^4.14.172",
    "@types/uuid": "^8.3.1",
    "bignumber.js": "^9.0.1",
    "lodash": "^4.17.21",
    "p-map": "^4.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "esbuild-node-tsc": "^1.6.1",
    "husky": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "prettier-plugin-import-sort": "^0.0.7",
    "typescript": "^4.3.5"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TalismanSociety/api.git"
  },
  "keywords": [
    "talisman",
    "polkadot",
    "substrate"
  ],
  "bugs": {
    "url": "https://github.com/TalismanSociety/api/issues"
  },
  "homepage": "https://github.com/TalismanSociety/api#readme",
  "packageManager": "yarn@3.0.1",
  "lint-staged": {
    "*.{ts,tsx,js,jsx,html,css,scss}": "prettier --write"
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
